@model IEnumerable<Phase_1.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@using (Html.BeginForm("index", "Products", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-lg-9">
                    <label>Search by Category Now!</label>
                    <input type="text" name="search" class="form-control">
                </div>
            </div>

            <div class="form-group">
                <div class=" col-lg-3">
                    <input type="submit" value="Search" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-lg-4">
                    <div class="card" style="width: 18rem;">
                        <img src="@Url.Content(item.image)" class="card-img-top" alt="..." width="175px" height="175px">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.name)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.price)</p>
                            @Html.ActionLink("Details", "Details", new { id = item.id })
                        </div>
                    </div>
                </div>

            }
        </div>

